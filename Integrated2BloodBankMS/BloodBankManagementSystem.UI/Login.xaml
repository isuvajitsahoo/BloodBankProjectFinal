<Window x:Name="Login" x:Class="BloodBankManagementSystem.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodBankManagementSystem.UI"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800"  Style="{StaticResource HeaderFooterWindowStyle}" >
    <Grid>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Height="34" Margin="386,92,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="163"/>
        <Label x:Name="label" Content="User Name:" HorizontalAlignment="Left" Margin="251,92,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
        <Label x:Name="label1" Content="Password:" HorizontalAlignment="Left" Margin="251,179,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
        <PasswordBox x:Name="pwbPassword" HorizontalAlignment="Left" Margin="386,185,0,0" VerticalAlignment="Top" Height="28" Width="163"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="317,262,0,0" VerticalAlignment="Top" Width="157" Height="48" Click="btnLogin_Click" FontWeight="Bold" FontSize="20"/>

    </Grid>
</Window>
